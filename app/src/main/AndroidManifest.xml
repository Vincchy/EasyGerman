<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.vinchy.easygerman">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_german_flag"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_german_flag_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyGerman"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewCategoryActivity"/>
        <activity android:name=".AddWordActivity"/>
        <activity android:name=".AddTranslationActivity"/>
        <activity android:name=".QuizShuffleActivity"/>
        <activity android:name=".ViewWordsActivity"/>
        <activity android:name=".AddCategoryActivity"/>
        <activity android:name=".WordlistActivity"/>
    </application>

</manifest>